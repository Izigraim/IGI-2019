@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model IEnumerable<JobTrackingSystem.Models.User>
@{
    ViewBag.Title = Localizer["users"];
}

<a asp-action="Create">@Localizer["add"]</a>

<table class="table">
    <tr><th>@Localizer["email"]</th><th>@Localizer["nick"]</th><th></th></tr>
    @foreach (var user in Model)
    {
        <tr>
            <td>@user.Email</td>
            <td>@user.Nickname</td>
            <td>
                <form asp-action="Delete" asp-route-id="@user.Id" method="post">
                    <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@user.Id">@Localizer["edit"]</a>
                    <a class="btn btn-sm btn-primary" asp-action="ChangePassword" asp-route-id="@user.Id">@Localizer["password"]</a>
                    <button type="submit" class="btn btn-sm btn-danger">
                        @Localizer["delete"]
                    </button>
                </form>
            </td>
        </tr>
    }
</table>