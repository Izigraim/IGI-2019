@model JobTrackingSystem.Models.TrackingTask
@{
    ViewData["Title"] = "Редактирование задания";
}
<form asp-action="Edit" asp-controller="Home">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="ShortDescription" class="control-label">Название</label><br />
        <input type="text" asp-for="ShortDescription" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="LongDescription" class="control-label">Задание</label><br />
        <input type="text" asp-for="LongDescription" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="status" class="control-label">Статус</label><br />
        <input type="hidden" asp-for="status" class="form-control" />
    </div>
    <div class="form-group">
        <input type="hidden" asp-for="dateOfTaking" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Обновить" class="btn btn-default" />
    </div>
</form>